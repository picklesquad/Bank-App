<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="teal_button">
        <item name="android:background">@drawable/teal_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="blue_button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="yellow_button">
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
