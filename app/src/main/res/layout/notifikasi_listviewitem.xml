<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_notifikasi"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/light_grey_2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">
                    <TextView
                        android:id="@+id/id_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9831030283"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_date_notifikasi"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/id_notif"
                        android:text="05 Apr 2016, 12:32"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">
                    <TextView
                        android:id="@+id/tv_user_notifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edwin Aditya Rahman"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">
                    <TextView
                        android:id="@+id/tv_price_notifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 40.000,-"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_status_notifikasi"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/id_notif"
                        android:text="Status : PENDING"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>