<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_notifikasi"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/light_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <!--ImageView
                        android:id="@+id/icon_user_notifikasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_user"
                        android:layout_marginLeft="8dp"/-->


                    <TextView
                        android:id="@+id/id_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9831030283"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_date_notifikasi"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/id_notif"
                        android:text="05 Apr 2016, 12:32"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"/>
                    >


                    <!--android:layout_toRightOf="@id/icon_user_notifikasi"-->

                   </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <!--ImageView
                        android:id="@+id/icon_date_notifikasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_calendar"
                        android:layout_marginLeft="8dp"/-->

                    <TextView
                        android:id="@+id/tv_user_notifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edwin Aditya Rahman"
                        android:textColor="@color/text"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                    <!--ImageView
                        android:id="@+id/icon_price_notifikasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/ic_coin_stack"
                        android:layout_marginLeft="8dp"/-->

                    <TextView
                        android:id="@+id/tv_price_notifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 200.000,00"
                        android:textColor="@color/text"
                        android:textSize="@dimen/abc_text_size_body_1_material"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <!--TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:text="HAHA"
            android:textColor="@color/text"
            /-->


    </android.support.v7.widget.CardView>

</LinearLayout>