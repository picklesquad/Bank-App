<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nasabah_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/ic_user"
        app:border_width="2dp"
        app:border_color="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/nasabah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nasabah_photo"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:text="@string/nasabah_default_name"
        android:typeface="sans"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/nasabah_join_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nasabah_photo"
        android:layout_below="@id/nasabah_name"
        android:layout_marginLeft="16dp"
        android:text="@string/nasabah_default_join_date"
        android:typeface="sans"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"/>
</RelativeLayout>